<div class="reservation-form-wrapper bg-light p-4">
  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5" style="max-width: 900px;">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-lg-6" style="background-color: #f0f0f0; padding: 20px;">
          <h2>Sign up</h2> 
          <%= form_with model: @user, local: true, class: 'registration-main' do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

              <div class="mb-3">
                <%= f.label :first_name, '名:', class: 'form-label' %>
                <span class="badge bg-danger text-white" style="font-size: 10px;">必須</span>
                <%= f.text_field :first_name, class: 'form-control', required: true %>
              </div>

              <div class="mb-3">
                <%= f.label :last_name, '姓:', class: 'form-label' %>
                <span class="badge bg-danger text-white" style="font-size: 10px;">必須</span>
                <%= f.text_field :last_name, class: 'form-control', required: true %>
              </div>

            <div class="mb-3">
              <%= f.label :email, 'メールアドレス:', class: 'form-label' %>
              <span class="badge bg-danger text-white" style="font-size: 10px;">必須</span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password, 'パスワード:', class: 'form-label' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <span class="badge bg-danger text-white" style="font-size: 10px;">必須</span>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password_confirmation, 'パスワード確認:', class: 'form-label' %>
              <span class="badge bg-danger text-white" style="font-size: 10px;">必須</span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>

