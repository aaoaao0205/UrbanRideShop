<div class="reservation-form-wrapper bg-light p-4">
  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5" style="max-width: 900px;">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-lg-6" style="background-color: #f0f0f0; padding: 20px;">
          <h2>Log in</h2>
          <%= form_with(url: session_path(resource_name), local: true, html: { class: 'my-form-class' }) do |f| %>

            <div class="mb-3">
              <%= f.label :email, 'メールアドレス:', class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'email' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'パスワード:', class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, '記憶する', class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.submit 'Log in', class: 'btn btn-primary' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
